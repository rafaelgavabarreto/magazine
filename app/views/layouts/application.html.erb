      <%= link_to 'Brand', root_path, class: 'navbar-brand' %>
      <%= link_to 'New Post', '/posts/new', class: 'navbar-newpost' %>
    </div>
  </div>
  </nav>

  <body>

    <%= yield %>

  </body>
