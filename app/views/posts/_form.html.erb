<%= form_for @post, html: { multipart: true } do |f| %>
  
  <%= f.label :image %><br>
    <%= f.file_field :image %><br>

    <%= f.label :title %><br>
    <%= f.text_area :title, placeholder: 'Post title here', class: "newpost__textarea"%><br>

    <%= f.label :author %><br>
    <%= f.text_area :author, placeholder: 'Author name here', class: "newpost__textarea" %><br>

    <%= f.label :short_text %><br>
    <%= f.text_area :short_text, placeholder: 'Short text here', class: "newpost__textarea" %><br>

    <%= f.label :content %><br>
    <%= f.text_area :content, placeholder: 'Post text here', class: "newpost__content"%><br>

    <%= f.submit class: "newpost__create"%>
  </h1>
<% end %>